        <tr>
            <td>@result.Id</td><td>@result.NS.Id</td><td>@result.EW.Id</td><td>@result.TableNumber</td><td>@result.RoundNumber</td><td>@result.NumberOfTricks</td><td>@result.ContractColor</td><td>@result.ContractLevel</td>
        </tr>
