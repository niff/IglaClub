@*@model IglaClub.ObjectModel.Entities.User*@
 
<div>
    <p title="If you want to add new user to the system, please fulfill data below and confirm. New user will be instantly visible in the system">
        Create new user:
    </p>
    <input type="text" id="AddUserName" placeholder="Name" style="width: 200px;"/>
    <input type="text" id="AddUserEmail" placeholder="Email" style="width: 200px;" />
    <input type="button" class="btn btn-default btn-small" id="CreateNewUserLogin" onclick="addUser()" value="Create" />
    
</div>
<script>
    function addUser() {
        var name = $('#AddUserName').val();
        var email = $('#AddUserEmail').val();

        $.ajax({
            url: "/Tournament/QuickAddUser",
            type: "POST",
            async: false,
            data: { name: name, email: email },
            success: refreshParticipants
        });
    }
</script>