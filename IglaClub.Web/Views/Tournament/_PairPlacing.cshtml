@model List<IglaClub.Web.Models.ViewModels.PairRosterViewModel>

@*<table class="tournamentsListTable table table-striped table-hover">*@
<div class="pairs">
    <p>Placing</p>
    <table class="table table-striped table-hover text-left">
        <tr>
            <th>Table</th>
            <th>NS</th>
            <th>EW</th>
        </tr>

        @foreach (var item in Model)
        {
            //todo improve table
            <tr>
                <td>
                    @item.TableNumber
                </td>
                <td>
                    <span class="label label-default label-light-gray">@item.NsPair.PairNumber</span>
                    @item.NsPair
                </td>
                <td>
                    <span class="label label-default label-light-gray">@item.EwPair.PairNumber</span>
                    @item.EwPair
                </td>

            </tr>
        }

    </table>
</div>