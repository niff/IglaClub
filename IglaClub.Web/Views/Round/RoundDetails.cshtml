@using IglaClub.ObjectModel.Tools;
@model IglaClub.Web.Models.ViewModels.RoundDetailsViewModel

@{
    ViewBag.Title = "Current round";
}
<div class="row">
    <div class="col-md-12 column-padding">
<span class="medium-header">Round @Model.Tournament.CurrentRound</span>

@if (@Model.Results.Any())
{
    <div class="panel-group">
        <span class="small-header">Table @Model.Results.First().TableNumber</span>   @*//todo bartek what is this First()*@
        <table class="table table-striped table-padding">
            <tr><td><b>NS</b></td><td><b> @Model.NsPair.PairNumber</b></td><td> @Model.NsPair</td></tr>
            <tr><td><b>EW</b></td><td><b>@Model.EwPair.PairNumber</b></td><td> @Model.EwPair</td></tr>
        </table>
    </div>
    <br />
    <div class="col-xs-12">
        <table class="table table-striped table-hover text-left">
            <tr>
                <th>Board</th>
                <th>Result</th>
                <th>Score</th>
                <th>Edit</th>
            </tr>

            @foreach (var result in Model.Results)
            {
                <tr>
                    <td>
                        @result.Board.BoardNumber
                    </td>
                    <td style="white-space: nowrap">
                        @ResultsParser.GetFormatResult(result)
                    </td>
                    <td>
                        @result.ResultNsPoints
                    </td>
                    <td class="squeeze">
                        <a href="@Url.Action("EditResult","Results", new { resultId = result.Id })">
                            <span class="glyphicon glyphicon-pencil"></span>
                            <span class="hidden-xs">Edit</span>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <span>No boards on this round are yet available</span>
}
<div>
@Html.ActionLink("See tournament details", "Details", "Tournament", new { id = Model.Tournament.Id }, null)
@Html.ActionLink("Refresh", "RoundDetails", new {tournamentId = @Model.Tournament.Id})    
</div>
</div>
</div>
