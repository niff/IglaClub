@model IglaClub.Web.Models.ViewModels.Clubs.ClubsIndexAdminViewModel

@{
    ViewBag.Title = "My Clubs";
}
<div class="row">
    <div class="col-md-12 column-padding">
        <span class="medium-header">Bridge Clubs</span>

        <p>
            <a href="@Url.Action("Create")" class="btn btn-info">
                <span class="glyphicon glyphicon-plus-sign right-side-margin"></span>Create club
            </a>
        </p>
        @if (Model.Clubs.Any())
        {
            <table class="table table-striped table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Clubs.First().Name)
                    </th>
                    <th>
                        Members
                    </th>
                    <th>
                        Location
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.Clubs)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Details", new {id = item.Id})">@Html.DisplayFor(modelItem => item.Name)</a>
                        </td>
                        <td>
                            @item.ClubUsers.Count
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>

                            @Html.ActionLink("Edit", "Edit", new {id = item.Id})
                            |
                            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                        </td>
                    </tr>
                }
                
            </table>
        }
        else
        {
            <span>You don't have any yours clubs yet. You can easily create a new one. 
        If you have your club, you can easily inform your community about the tournaments, about new events, and keep all tournaments created by you in one place.</span>
        }
        </div>
    </div>